@model HomeViewModel
<h1> Лучший нож </h1>
<div class="row mt-5 mb-2">
    @{
        foreach (var knife in Model.favKnife)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@knife.img" alt="@knife.name" />
                <h2>@knife.name</h2>
                <p>@knife.shortDesc</p>
                <p>Цена: @knife.price.ToString("c")</p>
                <p><a class="btn btn-warning" href="#">Подробнее</a> </p>
            </div> 
        }
    }
</div>